<resources>

    <style name="WeatheryTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorEnergyYellow</item>
        <item name="colorPrimaryDark">@color/colorHokeyPokey</item>
        <item name="colorAccent">@color/primaryLightColor</item>
    </style>

    <!--<style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/drawable_launch_screen</item>
    </style>-->

    <style name="WeatheryTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressBarTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorWebOrange</item>
    </style>

    <style name="WeatheryTheme.DetailHeader" parent="TextAppearance.MdcTypographyStyles.Headline4">
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_15dp</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:maxLines">3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatheryTheme.LocationChooser" parent="TextAppearance.MdcTypographyStyles.Headline6">
        <item name="android:layout_marginTop">@dimen/dimen_30dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_15dp</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:maxLines">3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatheryTheme.DetailExtraInfo" parent="TextAppearance.MdcTypographyStyles.Headline5">
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatheryTheme.WeatherDetail" parent="TextAppearance.MdcTypographyStyles.Subtitle2">
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:drawablePadding">@dimen/dimen_8dp</item>
        <item name="android:textColor">@color/colorSubtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WeatheryTheme.EmptyState" parent="TextAppearance.MdcTypographyStyles.Headline6">
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_15dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorHokeyPokey</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>